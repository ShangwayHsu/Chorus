<!DOCTYPE html>
<html>
<head>
  <title>Chorus - Home</title>
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lato:100,200,300,400,500" rel="stylesheet">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <script src="/js/chorus.js" type"text/javascript"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
</head>
<body>

  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header ">
    <header class="mdl-layout__header nav-bar">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <a href="/" class="mdl-layout-title chorus-menu-title" style="font-family: 'Lobster', cursive; font-size:23px;">Chorus <sup>â™«</sup></a>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation. We hide it in small screens. -->
        <nav class="mdl-navigation mdl-layout--large-screen-only">
        </nav>
      </div>
    </header>
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title mdl-color-text--grey-500">Chorus</span>
      <nav class="mdl-navigation">
        <a class="mdl-navigation__link" href="/">Home</a>
        <a id="my-group" class="mdl-navigation__link">My Group</a>
        <a id="editNotification-btn" class="mdl-navigation__link">Edit Notifications</a>
        <a id="editResetCycle-btn" class="mdl-navigation__link">Edit Reset Cycle</a>
        <a id="logout" class="mdl-navigation__link">Sign Out</a>
      </nav>
    </div>
    <main class="mdl-layout__content">
      <!-- PAGE CONTENT STARTS HERE -->
      <div class="main-content">
        <h1 class="home-title">{{curr-group-name}}</h1>
        <h3 class="home-title"> Week {{curr-monday}} - {{curr-sunday}} </h3>
        <!-- My Chores button -->
        <div class="center-btn">
          <a id="show-my-chores" class="my-chores-btn mdl-button mdl-js-button mdl-button--raised mdl-button--colored" style="background-color: #FFB36D">
            View My Chores
          </a>
          <div class="currUserId" style="display: none;">{{curr-user-id}}</div>
          <div class="currGroupId" style="display: none;">{{curr-group-id}}</div>
          <div class="currGroupName" style="display: none;">{{curr-group-name}}</div>
        </div>

        <div class="mdl-grid center-items">

          <!-- UNCOMPLETED CHORES LIST -->
          <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp chore-box">
            <div class="mdl-card__title incomplete">
              <h2 class="mdl-card__title-text mdl-color-text--white">Uncompleted</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <ul class="mdl-list">

                {{#each uncompleted-chores}}
                <li class="show-info mdl-list__item">
                  <div id={{chore_id}} class="show-info mdl-list__item-primary-content">
                    <i class="material-icons mdl-list__item-icon mdl-color-text--grey-400">query_builder</i>
                    <a id={{chore_id}} type="button" class="mdl-chip mdl-chip--contact">

                      {{#short_names}}
                      <span id={{../chore_id}} class="person-icon mdl-chip__contact mdl-color--teal mdl-color-text--white">{{short_name}}</span>
                      {{/short_names}}
                      <span id={{chore_id}} class="mdl-chip__text chore-text">{{chore_name}}</span>
                    </a>
                  </div>
                </li>
                {{/each}}

              </ul>
            </div>
          </div>

          <!-- COMPLETED CHORES LIST -->
          <div class="chore-box mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title complete">
              <h2 class="mdl-card__title-text mdl-color-text--white">Completed</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <ul class="demo-list-icon mdl-list">

                {{#each completed-chores}}
                <li id={{chore_id}} class="show-info mdl-list__item">
                  <div id={{chore_id}} class="show-info choreComplete mdl-list__item-primary-content">
                    <i class="material-icons mdl-list__item-icon mdl-color-text--green-400">check_circle</i>
                    <a id={{chore_id}} type="button" class="mdl-chip mdl-chip--contact choreComplete">
                      {{#short_names}}
                      <span id={{../chore_id}} class="choreComplete person-icon mdl-chip__contact mdl-color--teal mdl-color-text--white">{{short_name}}</span>
                      {{/short_names}}
                      <span id={{chore_id}} class="choreComplete chore-text mdl-chip__text">{{chore_name}}</span>
                    </a>
                  </div>
                </li>
                {{/each}}

              </ul>
            </div>
          </div>

        </main>
      </div>

        <a id="float-add-chore" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
          <i id="add-chore-icon" class="material-icons">add</i>
        </a>

          </body>
          <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
          <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
          <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

          </html>

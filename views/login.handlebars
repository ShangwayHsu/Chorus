<!DOCTYPE html>
<html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <title> Chorus </title>
  <style>
  body {
    background-image: url("/images/background3.jpeg");
    height: 100%;
    width: 100%;
    background-size: cover;
    background-repeat: no-repeat;

  }
  </style>
</head>
<body>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

  <!-- Event card -->
  <style>
  .demo-card-event.mdl-card {
    width: 80%;
    height: 85%;
    left: 10%;
    top: 7%;
    background: rgba(255,255,255,0.75);
    padding-left: 0%;
    padding-right: 0%;
    vertical-align: middle;

  }
  .demo-card-event > .mdl-card__actions {
    border-color: rgba(255, 255, 255, 0.2);
  }
  .demo-card-event > .mdl-card__title {
    align-items: flex-start;
  }
  h1 {
    font-family: "helvetica";
    padding-top: 0%;
    padding-left: 5%;
    padding-right: 0%;
    padding-bottom: 10%;
    color: #4682b4;
    font-size: 35px;
  }

  .demo-card-event > .everything_else > .mdl-card__title > .mdl-card__title-text {
    font-family: "helvetica";
    color: #4682b4;
    font-size: 70px;
    padding-left: 25%;
    padding-top: 0%;
    padding-bottom: 0%;
    align-items: center;
    justify-content: center;
  }
  .demo-card-event > .mdl-card__title > h4 {
    padding-left: 0%;
    padding-top: 2%;
    padding-bottom: 0px;
  }

  .demo-card-event > .mdl-card__actions {
    display: flex;
    box-sizing:border-box;
    align-items: center;
    padding-right: 100%;
  }
  .demo-card-event > .mdl-card__actions > .material-icons {
    padding-right: 0%;
    padding-left: 0%;
  }
  .demo-card-event > .mdl-card__title,
  .demo-card-event > .mdl-card__actions,
  .demo-card-event > .mdl-card__actions > .mdl-button {
    padding-bottom: 1%;
    color: #4682b4;
  }

  .demo-card-event > .everything_else {
    padding-left: 0%;
    padding-right: 0%;
    text-align: center;
    vertical-align: middle;
  }

  .register {
    padding-bottom: 4%;
    color: #FFFFFF;
  }

  .login-input {
    padding:20px;
    padding-top: 0px;
    padding-bottom: 0px;
    margin:0, auto;
  }

  .login {
    padding-bottom: 1%;
    color: #FFFFFF;
  }

  .no-padding {
    padding-left: 35%;
    padding-right: 0%;
    margin:0, auto;
  }

  .mdl-layout {
    align-items: center;
    justify-content: center;
  }

  </style>

  <div class="demo-card-event mdl-card mdl-shadow--2dp">
    <div class ="everything_else">
      <div class="mdl-card__title">
        <h1 class="title-text">Chorus</h1>
        <div class="mdl-card__title-text">Login</div>
      </div>

      <!-- user name text field -->
      <form class="login-input"action="#">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <label class="mdl-textfield__label" for="username">Username</label>
          <input class="mdl-textfield__input" type="text" id="username">
        </div>
      </form>

      <!-- password text field -->
      <form class="login-input" action="#">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <label class="mdl-textfield__label" for="password">Password</label>
          <input class="mdl-textfield__input" type="password" id="password">
        </div>
      </form>
      <div class= "login">
        <!-- Log-in button -->
        <button id="login-btn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
          Log in
        </button>
      </div>
      <div class= "register">
        <!-- Log-in button -->
        <button class="mdl-button mdl-js-button mdl-button--accent">
          Register Now
        </button>
      </div>
    </div>

  </div>

</body>
<script>

function login() {
  var username = $('#username').val();
  var password = $('#password').val();
  $.post('/login', {username: username, password: password}, function(data, err) {
    console.log(data);
    window.location.href = "/dashboard";
  })
  .fail(function(err) {
    console.log(err.responseText);
  });
}

$(document).keypress(function(e) {
  if(e.which == 13) {
    login();
  }
});

$("#login-btn").click(function(e) {
    login();
});

</script>
</html>
